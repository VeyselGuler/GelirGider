@{
    <style>
        .container {
            max-width: 500px;
            margin-top: 50px;
        }
    </style>
}

@if (TempData["AuthError"] != null)
{
<div class="alert alert-danger mb-3" role="alert">
    @TempData["AuthError"]
</div>
}

<div class="container">
    <h2 class="text-center">Kayıt Ol</h2>
    <form action="/register" method="post">
        <div class="form-group">
            <label for="name">Adınız</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="mail">E-posta</label>
            <input type="email" class="form-control" id="mail" name="mail" required>
        </div>
        <div class="form-group">
            <label for="pw">Şifre</label>
            <input type="password" class="form-control" id="pw" name="pw" required>
        </div>
        <div class="form-group">
            <label for="pwConfirmend">Şifreyi Onayla</label>
            <input type="password" class="form-control" id="pwConfirmend" name="pwconfirmend" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
    </form>
</div>

